platform :ios, '13.0'

# Disable CocoaPods analytics
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "Generated.xcconfig must exist. Run 'flutter pub get' first."
  end
  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in Generated.xcconfig"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# ---- Post-install: detect and scrub rogue -G; print exact sources ----
post_install do |installer|
  # normalize & scrub in build settings
  scrub_key = lambda do |config, key|
    val = config.build_settings[key]
    if val.is_a?(String)
      config.build_settings[key] = val.gsub(/(^|\s)-G(\s|$)/, '\1\2')
    elsif val.is_a?(Array)
      config.build_settings[key] = val.reject { |f| f.to_s.strip == '-G' }
    end
  end

  # 1) Pods build settings (and ensure Flutter adds its own)
  puts "=== POST_INSTALL: scanning Pods targets for -G ==="
  installer.pods_project.targets.each do |t|
    flutter_additional_ios_build_settings(t)
    t.build_configurations.each do |cfg|
      cfg.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS OTHER_LDFLAGS].each do |k|
        val = cfg.build_settings[k]
        if val && val.to_s.match(/(^|\s)-G(\s|$)/)
          puts "FOUND -G in Pods target=#{t.name} config=#{cfg.name} key=#{k}: #{val.inspect}"
        end
        scrub_key.call(cfg, k)
      end
    end
  end

  # 2) Runner (app) build settings
  require 'xcodeproj'
  runner_proj_path = File.expand_path('../Runner.xcodeproj', __FILE__)
  runner_proj = Xcodeproj::Project.open(runner_proj_path)
  puts "=== POST_INSTALL: scanning Runner target(s) for -G ==="
  runner_proj.targets.each do |t|
    t.build_configurations.each do |cfg|
      cfg.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS OTHER_LDFLAGS].each do |k|
        val = cfg.build_settings[k]
        if val && val.to_s.match(/(^|\s)-G(\s|$)/)
          puts "FOUND -G in Runner target=#{t.name} config=#{cfg.name} key=#{k}: #{val.inspect}"
        end
        scrub_key.call(cfg, k)
      end
    end
  end
  runner_proj.save

  # 3) Pods Target Support .xcconfig files (text-based configs Xcode reads)
  puts "=== POST_INSTALL: scanning Pods Target Support .xcconfig files for -G ==="
  def scrub_file(path)
    text = File.read(path)
    if text.match(/(^|\s)-G(\s|$)/)
      puts "FOUND -G in xcconfig: #{path}"
      new = text.gsub(/(^|\s)-G(\s|$)/, '\1\2') # remove bare -G only
      File.open(path, 'w') { |f| f.write(new) }
      puts "SCRUBBED xcconfig: #{path}"
    end
  end
  Dir.glob(File.expand_path('../Pods/Target Support Files/**/*.xcconfig', __FILE__)).each { |p| scrub_file(p) }

  puts "=== POST_INSTALL: scan complete ==="
end
